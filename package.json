{
	"name": "flexible-spacer-block",
	"version": "1.1.3",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"start": "chokidar \"src/**/*\" -c \"npm-run-all -p js:sourcemap sass:sourcemap\" --initial",
		"build": "npm-run-all -s clean:* js:compressed sass:compressed\" --initial",
		"sass:sourcemap": "node-sass src --output build/css --source-map true",
		"sass:compressed": "node-sass src --output build/css --output-style compressed",
		"js:sourcemap": "cross-env NODE_ENV=development wp-scripts build src/index --output-path build/js",
		"js:compressed": "wp-scripts build src/index --output-path build/js --webpack--devtool",
		"clean:css": "rimraf build/css",
		"clean:js": "rimraf build/js",
		"clean:package": "cross-conf-env rimraf ./npm_package_name",
		"clean:zip": "rimraf ./*.zip",
		"po2json": "cross-conf-env po2json languages/npm_package_name-ja.po languages/npm_package_name-ja-npm_package_name-editor.json -f jed",
		"release": "npm-run-all -s clean:package clean:zip release:mkdir release:copy release:archive clean:package",
		"release:copy": "cross-conf-env copyfiles -e \"./node_modules/**/*\" -e \"./vendor/**/*\" -e \"./*.json\" -e \"./*.xml\" -e \"./*.lock\" -e \"./*.zip\" -e \"./wp-assets/**/*\" ./**/* ./npm_package_name",
		"release:mkdir": "cross-conf-env mkdirp npm_package_name",
		"release:archive": "cross-conf-env bestzip ./npm_package_name-npm_package_version.zip ./npm_package_name"
	},
	"devDependencies": {
		"@wordpress/env": "^2.1.0",
		"@wordpress/icons": "^2.9.0",
		"@wordpress/scripts": "^12.5.0",
		"bestzip": "^2.1.7",
		"chokidar-cli": "^2.1.0",
		"copyfiles": "^2.4.1",
		"cpx": "^1.5.0",
		"cross-conf-env": "^1.2.1",
		"cross-env": "^7.0.3",
		"eslint-config-prettier": "^7.0.0",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-plugin-prettier": "^3.2.0",
		"mkdirp": "^1.0.4",
		"node-sass": "^5.0.0",
		"npm-run-all": "^4.1.5",
		"opener": "^1.5.2",
		"po2json": "^1.0.0-alpha",
		"rimraf": "^3.0.2",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-config-wordpress": "^17.0.0"
	},
	"dependencies": {}
}
