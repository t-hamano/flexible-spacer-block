{
	"name": "flexible-spacer-block",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"watch:sass": "sass src/admin-style.scss:build/css/admin-style.css src/editor-style.scss:build/css/editor-style.css --watch",
		"watch:js": "wp-scripts start --output-path=build/js",
		"build:js": "wp-scripts build --output-path=build/js",
		"build:sass": "sass src/admin-style.scss:build/css/admin-style.css src/editor-style.scss:build/css/editor-style.css --no-source-map --style compressed",
		"build": "npm run clean && npm run build:js && npm run build:sass",
		"clean": "rimraf build",
		"lint": "npm run lint:php && npm run lint:js && npm run lint:style",
		"lint:php": "composer lint",
		"lint:js": "wp-scripts lint-js",
		"lint:style": "wp-scripts lint-style"
	},
	"devDependencies": {
		"@wordpress/env": "^4.2.2",
		"@wordpress/icons": "^7.0.1",
		"@wordpress/scripts": "^19.2.2",
		"opener": "^1.5.2",
		"rimraf": "^3.0.2",
		"stylelint": "^13.13.1",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-order": "^5.0.0"
	},
	"dependencies": {}
}
