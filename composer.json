{
	"name": "t-hamano/flexible-spacer-block",
	"description": "WordPress plugin to add white space between blocks and customize its height for each device.",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Aki Hamano"
		}
	],
	"require-dev": {
		"squizlabs/php_codesniffer": "*",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"scripts": {
		"phpcs": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsextra,vendor/phpcsstandards/phpcsutils",
		"lint": "phpcs ./ --standard=./phpcs.ruleset.xml"
	}
}
